// Manage the file logs
include "/etc/bind/named.conf.log";

zone "<%= @local_domain %>" {
    type master;
    file "/var/lib/bind/db.<%= @local_domain %>";
    notify no;
    allow-update {
        key <%= @rndckey %>_rndc-key;
    };
};

zone "<%= @in_addr_arpa %>.in-addr.arpa" {
    type master;
    file "/var/lib/bind/db.<%= @local_domain %>.inv";
    notify no;
    allow-update {
        key <%= @rndckey %>_rndc-key;
    };
};

